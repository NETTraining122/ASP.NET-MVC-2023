@model MvcApplication1.Models.Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
     <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }
        .error {
            color: red;
        }
    </style>
</head>
<body>
    <div>
        @using(Html.BeginForm("Index","Home",FormMethod.Post))
        {
        <table>
            <tr>
                <td>Name</td>
                 <td>@Html.TextBoxFor(model=>model.Name)</td>
                 <td>@Html.ValidationMessageFor(model => model .Name, "", new { @class = "error" })</td>
            </tr>
             <tr>
                <td>City</td>
                 <td>@Html.TextBoxFor(model=>model.City)</td>
                 <td>@Html.ValidationMessageFor(model => model .City , "", new { @class = "error" })</td>
            </tr>
            <tr>
                <td><input type="submit" value="save" /></td>
            </tr>

        </table>
        
        
        }
        
    </div>
</body>
</html>
